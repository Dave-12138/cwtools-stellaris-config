types = {
	type[resource] = {
		path = "game/common/strategic_resources"
		file_extension = .txt

		subtype[tradable] = {
			tradable = yes
		}
		subtype[max] = {
			max = int
		}
		localisation = {
			## required
			Name = "$"
			## required
			Description = "$_desc"
		}
		images = {
			## primary
			icon = "gfx/interface/icons/resources/$.dds" # inferred
			## optional
			icon_grey = "gfx/interface/icons/resources/$_grey.dds" # inferred
			## optional
			icon_large = "gfx/interface/icons/resources/$_large.dds" # inferred
		}
	}
}


## push_scope = country
resource = {
	## cardinality = 0..1
	tradable = bool
	## cardinality = 0..1
	category = enum[resource_category]
	subtype[tradable] = {
		### default -1, if non-positive, resource cannot be traded in the Market
		## cardinality = 0..1
		market_amount = int
		### default -1, if non-positive, resource cannot be traded in the Market
		## cardinality = 0..1
		market_price = int
		max = int
	}
	## cardinality = 0..1
	max = int
	### default: no
	## cardinality = 0..1
	special_max_amount = bool

	### default yes, only implemented for tech resources
	## cardinality = 0..1
	allow_deficit = bool
	## cardinality = 0..1
	intangible_weight = float

	## cardinality = 0..1
	deficit_modifier = <static_modifier>
	## cardinality = 0..1
	deficit_situation = <situation_type>

	## cardinality = 0..1
	prerequisites = {
		## cardinality = 0..inf
		<technology>
	}

	## cardinality = 0..1
	visibility_prerequisite = {
		alias_name[trigger] = alias_match_left[trigger]
	}

	## cardinality = 0..1
	ai_weight = {
		alias_name[modifier_rule] = alias_match_left[modifier_rule]
	}

	## cardinality = 0..1
	tooltip_decimals = int

	## cardinality = 0..1
	ai_wants = {
		alias_name[modifier_rule] = alias_match_left[modifier_rule]
	}

	subtype[max] = {
		## cardinality = 0..1
		fixed_max_amount = yes
	}
}

enums = {
	enum[resource_category] = {
		basic
		advanced
		strategic
		rare
		other
	}
}