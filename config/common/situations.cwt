types = {
	type[situation_type] = {
		path = "game/common/situations"
		file_extension = .txt
		subtype[bidirectional] = {
			progress_direction = bidirectional
		}
		localisation = {
			## required
			name = "$"
			## required
			type_name = "$_type"
			## optional
			description = "$_desc"
		}
		images = {
			picture = "#picture" # <sprite>
		}
	}
}

## replace_scopes = { root = situation this = situation }
situation_type = {
	## cardinality = 0..inf
	picture = <sprite>
	## cardinality = 0..inf
	picture = {
		picture = <sprite>
		trigger = {
			alias_name[trigger] = alias_match_left[trigger]
		}
	}
	## cardinality = 0..1
	category = enum[situation_categories]

	## cardinality = 0..inf
	desc = {
		trigger = { alias_name[trigger] = alias_match_left[trigger] }
		text = localisation
	}
	## cardinality = 0..1
	on_start = {
		alias_name[effect] = alias_match_left[effect]
	}
	## cardinality = 0..1
	on_fail = {
		alias_name[effect] = alias_match_left[effect]
	}
	## cardinality = 0..1
	on_abort = {
		alias_name[effect] = alias_match_left[effect]
	}
	## cardinality = 0..1
	abort_trigger = {
		alias_name[trigger] = alias_match_left[trigger]
	}

	## cardinality = 0..1
	## push_scope = country
	modifier = {
		alias_name[modifier] = alias_match_left[modifier]
	}
	## cardinality = 0..1
	## push_scope = planet
	target_modifier = {
		alias_name[modifier] = alias_match_left[modifier]
	}

	## cardinality = 0..inf
	## push_scope = country
	triggered_modifier = single_alias_right[triggered_modifier]
	## cardinality = 0..inf
	## push_scope = planet
	triggered_target_modifier = single_alias_right[triggered_modifier]

	## cardinality = 0..1
	on_monthly = {
		## cardinality = 0..1
		events = {
			## cardinality = 0..inf
			<event>
		}
		## cardinality = 0..1
		random_events = {
			## cardinality = 0..inf
			int = 0
			## cardinality = 0..inf
			int = <event>
		}
	}

	monthly_progress = {
		alias_name[modifier_rule_with_loc] = alias_match_left[modifier_rule_with_loc]
	}
	on_progress_complete = {
		alias_name[effect] = alias_match_left[effect]
	}

	## cardinality = 0..inf
	approach = {
		name = localisation
		icon = <sprite>
		icon_background = <sprite>
		## cardinality = 0..1
		default = yes
		## cardinality = 0..1
		allow = {
			alias_name[trigger] = alias_match_left[trigger]
		}
		## cardinality = 0..1
		potential = {
			alias_name[trigger] = alias_match_left[trigger]
		}

		## cardinality = 0..1
		## push_scope = country
		modifier = {
			alias_name[modifier] = alias_match_left[modifier]
		}
		## cardinality = 0..1
		## push_scope = planet
		target_modifier = {
			alias_name[modifier] = alias_match_left[modifier]
		}

		## cardinality = 0..inf
		## push_scope = country
		triggered_modifier = single_alias_right[triggered_modifier]
		## cardinality = 0..inf
		## push_scope = planet
		triggered_target_modifier = single_alias_right[triggered_modifier]

		## cardinality = 0..1
		resources = {
			category = <economic_category>
			alias_name[economic_template] = alias_match_left[economic_template]
		}
		## cardinality = 0..1
		on_select = {
			alias_name[effect] = alias_match_left[effect]
		}
		## cardinality = 0..1
		ai_weight = int
		## cardinality = 0..1
		ai_weight = {
			alias_name[modifier_rule] = alias_match_left[modifier_rule]
		}
	}

	### Situation will start at this number. Default is 0
	## cardinality = 0..1
	start_value = int
	### monodirectional/bidirectional (defaults to monodirectional)
	## cardinality = 0..1
	progress_direction = monodirectional
	### monodirectional/bidirectional (defaults to monodirectional)
	## cardinality = 0..1
	progress_direction = bidirectional
	subtype[bidirectional] = {
		### Only for progress_direction = bidirectional - only affects progress towards completetion (right)
		## cardinality = 0..1
		complete_category = enum[situation_categories]
		### Only for progress_direction = bidirectional - only affects progress towards fail (left)
		## cardinality = 0..1
		fail_category = enum[situation_categories]
	}

	complete_icon = <sprite>
	complete_icon_frame = <sprite>
	## cardinality = 0..1
	fail_icon = <sprite>
	## cardinality = 0..1
	fail_icon_frame = <sprite>

	## cardinality = 0..1
	stages = {
		## cardinality = 1..inf
	 	scalar = {
	 		end = int
			icon = <sprite>
			icon_background = <sprite>
			## cardinality = 0..1
			custom_tooltip = localisation
			## cardinality = 0..1
			on_first_enter = {
				alias_name[effect] = alias_match_left[effect]
			}
			## cardinality = 0..1
			potential = {
				alias_name[trigger] = alias_match_left[trigger]
			}

			## cardinality = 0..1
			## push_scope = country
			modifier = {
				alias_name[modifier] = alias_match_left[modifier]
			}
			## cardinality = 0..1
			## push_scope = planet
			target_modifier = {
				alias_name[modifier] = alias_match_left[modifier]
			}

			## cardinality = 0..inf
			## push_scope = country
			triggered_modifier = single_alias_right[triggered_modifier]
			## cardinality = 0..inf
			## push_scope = planet
			triggered_target_modifier = single_alias_right[triggered_modifier]
	    }
	}
}

enums = {
	complex_enum[situation_approaches] = {
		path = "game/common/situations"
		name = {
			approach = {
				name = enum_name
			}
		}
	}
	complex_enum[situation_stages] = {
		path = "game/common/situations"
		name = {
			stages = {
				enum_name = {}
			}
		}
	}
	enum[situation_categories] = {
		positive
		negative
		neutral
	}
}
