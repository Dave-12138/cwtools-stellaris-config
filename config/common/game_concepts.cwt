types = {
	type[game_concept] = {
		path = "game/common/game_concepts"
		file_extension = .txt
		localisation = {
			## required
			name = "$"
			## required
			desc = "$_desc"
		}
		images = {
			## cardinality = 0..1
			icon = "#icon" # icon[gfx/interface/icons/concepts]
		}
	}
}

game_concept = {
	## cardinality = 0..1
	## file_extensions = { .dds .png .tga }
	icon = filepath
	alias = {
		## cardinality = 0..inf
		scalar
	}
}

