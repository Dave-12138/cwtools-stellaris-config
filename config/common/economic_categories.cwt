types = {
	type[economic_category] = {
		path = "game/common/economic_categories"
		file_extension = .txt
		subtype[has_parent] = {
			parent = scalar
		}
		subtype[hidden] = {
			hidden = yes
		}
		images = {
			subtype[!hidden] = {
				## primary
				icon = "#icon" # icon[gfx/interface/icons/jobs]
			}
		}
	}
}

economic_category = {
	## cardinality = 0..1
    parent = <economic_category>
	## cardinality = 0..1
	use_for_ai_budget = bool
	subtype[!hidden] = {
		## cardinality = 0..1
		icon = icon[gfx/interface/icons/jobs]
	}
	subtype[hidden] = {
		hidden = yes
	}

	### Used to generate modifiers
	### default: economic_unit
	## cardinality = 0..1
	modifier_category = enum[scripted_modifier_category]

	## cardinality = 0..1
	hidden = bool

	### sets the modifier category, which is sometimes used to determine whether it is applied to a certain object (so make sure this is set to what you want)
	## cardinality = 0..1
	category = enum[scripted_modifier_category]

	## cardinality = 0..inf
	triggered_produces_modifier = {
		subtype[has_parent] = {
			## cardinality = 0..1
			use_parent_icon = yes
		}
		key = scalar
		## cardinality = 0..1
		use_parent_icon = yes
		## cardinality = 0..1
		trigger = single_alias_right[trigger_clause]
		modifier_types = {
			## cardinality = 0..2
			enum[economic_modifier_type]
		}
	}
	## cardinality = 0..inf
	triggered_cost_modifier = {
		key = scalar
		## cardinality = 0..1
		use_parent_icon = yes
		## cardinality = 0..1
		trigger = single_alias_right[trigger_clause]
		## cardinality = 0..1
		use_parent_icon = yes
		modifier_types = {
			## cardinality = 0..2
			enum[economic_modifier_type]
		}

	}
	## cardinality = 0..inf
	triggered_upkeep_modifier = {
		key = scalar
		## cardinality = 0..1
		use_parent_icon = yes
		## cardinality = 0..1
		trigger = single_alias_right[trigger_clause]
		modifier_types = {
			## cardinality = 0..2
			enum[economic_modifier_type]
		}

	}
	## cardinality = 0..1
	ai_use_parent_for_resources_upkeep = {
		## cardinality = 1..inf
		<resource>
	}
	## cardinality = 0..1
	generate_mult_modifiers = {
		## cardinality = 1..3
		enum[economic_modifier_category]
	}
	## cardinality = 0..1
	generate_add_modifiers = {
		## cardinality = 1..3
		enum[economic_modifier_category]
	}
}

alias[economic_template:cost] = {
	## cardinality = 0..1
	trigger = single_alias_right[trigger_clause]
	## cardinality = 0..inf
	<resource> = float
	## cardinality = 0..inf
	multiplier = value_field
	## cardinality = 0..inf
	mult = value_field
