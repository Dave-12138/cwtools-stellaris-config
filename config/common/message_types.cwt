types = {
	type[message_type] = {
		path = "game/common/message_types"
		file_extension = .txt
		name_field = key
	}
}

message_type = {
	icon =	<sprite>
	icon_frame = int
	key = scalar
	## cardinality = 0..1
	name = localisation
	## cardinality = 0..1
	sound = <sound_effect>
	## cardinality = 0..1
	sound_is_advisor = bool
	ping = <pingmap>
	## cardinality = 0..1
	auto_opens = scalar
}
